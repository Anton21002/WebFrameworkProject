<div class="indexcards">
    {{#each items}}
        <div class="indexcard">
            <h3 tabindex="0">{{this.cloName}}</h3>
            <img class="Clothimg" src="{{this.cloImgLink}}" alt="{{this.cloName}}">
            <div class="iteminfo">
            <p tabindex="0">Clothing Type : {{this.cloType}}</p>
            <p tabindex="0">Clothes Style : {{this.cloStyle}}</p>
            <p tabindex="0">Avalible Sizes : {{this.cloSizes}}</p>
            <p tabindex="0">Brand : {{this.cloBrand}}</p>
            <p tabindex="0">Material : {{this.cloMat}}</p>
            <p tabindex="0">Avalible Colors : {{this.cloColorPrim}}</p>
            </div><div class="indexpricing">
            <h4 tabindex="0">Price {{this.priceEuro}} â‚¬</h4>
            <h5 tabindex="0">On discount : {{#if onDiscount}}Yes{{else}}No{{/if}}</h5>
            </div>
        </div>
    {{/each}}
</div>
